#!/cmd/rc

sys_rfork

@{sys_rfork n; mkdir '#σc'/testshr; ramfs -S testshr; echo 3 > '#σc'/testshr/ramfs <>[3]/srv/testshr; echo PASS > '#σ'/testshr/file }

bind '#σ' /shr

RESULT=`{cat /shr/testshr/file}

rm -fr '#σc'/testshr
